#:kivy 1.7.2

<HomeScreen>:
    orientation: 'vertical'
    FloatLayout:
        size_hint: 1, .95    
        TextInput: 
        	text: 'funny stuff'
            background_color: .8, .8, 0, 1
            size_hint: .75, .1
            multiline: True
    		pos_hint: {'x': .125, 'y': .45}
    		text_size: self.size
            valign: 'middle'
            halign: 'center'
    		padding: 5
    		
        Button:
        	text: 'Translate'
        	pos_hint: {'x': .35, 'y': .35}
        	size_hint: .3, .08
            valign: 'middle'
            halign: 'center'
            text_size: self.size  
            on_release: root.results_screen  

        Label: 
        	text: '*Bedouin مُخْتَبَر*'
        	text_size: self.size
            valign: 'middle'
            halign: 'center'
        	pos_hint: {'x': .3, 'y': .75}
        	size_hint: .4, .2

    BoxLayout:
        size_hint: 1, .05
        pos_hint: {'x': 0, 'y': .95}
        Button:
            text: 'Usage Notes'
        Button:
            text: 'About'
        
    
